{
    "name": "gcode",
    "displayName": "gcode",
    "description": "gcode",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:gcode"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "gcode",
                "aliases": [
                    "G-Code",
                    "gcode"
                ],
                "extensions": [
                    ".nc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "gcode",
                "scopeName": "source.gcode",
                "path": "./syntaxes/gcode.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "gcode.toggleComment",
                "title": "Toggle Comment",
                "category": "G-Code"
            },
            {
                "command": "gcode.addLineNumbers",
                "title": "Line Numbers (Add/Update)",
                "category": "G-Code"
            },
            {
                "command": "gcode.removeLineNumbers",
                "title": "Line Numbers (Remove)",
                "category": "G-Code"
            }
        ],
        "configuration": {
            "title": "G-Code",
            "properties": {
                "gcode.definitions": {
                    "description": "Definitions for G and M codes.",
                    "type": "object",
                    "default": {
                        "G0": "Rapid, linear interpolation",
                        "G1": "Feed, linear interpolation",
                        "G2": "Feed, circular interpolation, clockwise",
                        "G3": "Feed, circular interpolation, counter-clockwise",
                        "M3": "Spindle start, clockwise",
                        "M4": "Spindle start, counter-clockwise",
                        "M5": "Spindle stop"
                    }
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc",
        "test": "ts-mocha './test/*.ts'"
    },
    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/mocha": "^8.0.3",
        "@types/vscode": "^1.46.0",
        "chai": "^4.2.0",
        "mocha": "^8.1.3",
        "typescript": "^3.8.0",
        "ts-mocha": "^7.0.0"
    },
    "dependencies": {
        "vscode": "^1.1.37"
    }
}
